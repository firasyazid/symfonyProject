{% extends 'base1.html.twig' %}

{% block title %}Abonnement index{% endblock %}

{% block body %}
	<h1>All Sessions</h1>
	{% for message in app.flashes('info') %}
<div class="alert alert-succes" style="background-color: #00FA9A;text-align:center;font-size:35px;margin: 25px 100px ; ">
{{ message }}
</div>
{% endfor %}	
	<section class="section">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Datatables</h5>
						<div class="dataTable-top">
							<div class="dataTable-dropdown">
								<label>
									<select class="dataTable-selector">
										<option value="5">5</option>
										<option value="10" selected="">10</option>
										<option value="15">15</option>
										<option value="20">20</option>
										<option value="25">25</option>
									</select>
									entries per page</label>
							</div>
							<div class="dataTable-search"><input class="dataTable-input" placeholder="Search..." type="text"></div>
						</div>
						<!-- Table with stripped rows -->
						<table class="table">
							<thead>
								<tr>
									<th>IdAbonnement</th>
									<th>NomAb</th>
									<th>PrixAb</th>
									<th>Description</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for abonnement in abonnements %}
									<tr>
										<td>{{ abonnement.idAbonnement }}</td>
										<td>{{ abonnement.nomAb }}</td>
										<td>{{ abonnement.prixAb }}</td>
										<td>{{ abonnement.description }}</td>
										<td>
											<a href="{{ path('app_abonnement_show', {'idAbonnement': abonnement.idAbonnement}) }}">show</a>
											<a href="{{ path('app_abonnement_edit', {'idAbonnement': abonnement.idAbonnement}) }}">edit</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						<!-- End Table with stripped rows -->
					</div>
				</div>
			</div>
		</div>
	</section>
	<a href="{{ path('app_abonnement_new') }}">Create new</a>

{% endblock %}
