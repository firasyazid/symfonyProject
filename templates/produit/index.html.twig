{% extends 'base1.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit Table</h1>
     {% for message in app.flashes('info') %}
<div class="alert alert-succes" style="background-color: #00FA9A;text-align:center;font-size:35px;margin: 25px 100px ; ">
{{ message }}
</div>
{% endfor %}

       <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
              <div class="dataTable-top">
    <div class="dataTable-dropdown"><label><select class="dataTable-selector">
                <option value="5">5</option>
                <option value="10" selected="">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
            </select> entries per page</label></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Name</th>
                <th>Price</th>
                 <th>image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.price }}</td>
                 
             <td>   <img src="{{ asset('uploads/' ~ produit.image) }}"  style="width: 50px; height: 50px"></td>

 
 
                <td>

                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
