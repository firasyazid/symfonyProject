{% extends 'base1.html.twig' %}

{% block body %}
	<h1>
		<i class="bi bi-person-plus"></i>Clients Table
	</h1>

    <p id="date"></p>
<script>
document.getElementById("date").innerHTML = Date();
</script>


	<section class="section">
		<div class="row">
			<div class="col-lg-12">

				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Datatables</h5>
						<div class="dataTable-top">
							<div class="dataTable-dropdown">
								<label>
									<select class="dataTable-selector">
										<option value="5">5</option>
										<option value="10" selected="">10</option>
										<option value="15">15</option>
										<option value="20">20</option>
										<option value="25">25</option>
									</select>
									entries per page</label>
							</div>
							<div class="dataTable-search"><input class="dataTable-input" placeholder="Search..." type="text"></div>
						</div>

						<!-- Table with stripped rows -->
						<table class="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Nom</th>
									<th>Prenom</th>
									<th>Adresse</th>
									<th>Email</th>
									<th>MdpClient</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for client in clients %}
									<tr>
										<td>{{ client.id }}</td>
										<td>{{ client.nom }}</td>
										<td>{{ client.prenom }}</td>
										<td>{{ client.adresse }}</td>
										<td>{{ client.mail }}</td>
										<td>{{ client.mdpClient }}</td>
										<td>
											<a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
											<a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
											<a href="{{ path('client_list') }}">PDF</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="7">no records found</td>
									</tr>
								{% endfor %}
								
							</tbody>
						</table>
						<!-- End Table with stripped rows -->

					</div>
				</div>

			</div>
		</div>
	</section>

	<a href="{{ path('app_client_new') }}">Create new</a>

{% endblock %}
