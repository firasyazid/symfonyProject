{% extends 'base1.html.twig' %}

{% block title %}Fournisseur index{% endblock %}

{% block body %}

    <h1>Fournisseur index</h1>
    {% block scripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js%22%3E"></script>
           <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js%22%3E"></script>
        <script type="text/javascript">  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js%22%3E"</script>
        <script>
            $(document).ready(function(){
                $("#search").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    {% endblock %}

    <div class="input-group custom-search-form">

        <input type="text" id="search" class="form-control" placeholder="Search here">
    </div>
<div class="table-responsive">
    <table class="table table-bordered" id="myTable">
        <thead>
            <tr>
                <th class="th-sm">Id</th>
                <th class="th-sm">Nom</th>
                <th class="th-sm">Adresse</th>
                <th class="th-sm">Numtel</th>
                <th class="th-sm">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}

            <tr>
                <td>{{ fournisseur.id }}</td>
                <td>{{ fournisseur.nom }}</td>
                <td>{{ fournisseur.adresse }}</td>
                <td>{{ fournisseur.numtel }}</td>
                <td>
                    <a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}">show</a>
                    <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>
                    <a href="{{ path('app_fournisseur_pdf', {'id': fournisseur.id}) }}">pdf</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_fournisseur_new') }}">Create new</a>
{% endblock %}
