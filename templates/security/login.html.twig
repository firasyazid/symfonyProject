 <meta charset="UTF-8">
  <title>Gymplus - Login</title>
  <link rel="stylesheet" href="style_login.css">


<form method="post">

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
<div class="login-box">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <div class="user-box">
    <h4>Email</h4>
    <label for="inputMail"></label>
    <input type="email" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>
    </div> 

    <div class="user-box">
    <h4>Password</h4>   
    <label for="inputPassword"></label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    </div> 

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<a>
    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</a>

    {% if error %}
       <h3> <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> </h3>
    {% endif %}

</form>
</div>

